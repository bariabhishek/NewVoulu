<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_10"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commted_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/boy"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:background="@drawable/bubble_effect_commented"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_10"
            android:textStyle="bold"
            android:text="demo chal rhah"
            android:textColor="#000"
           />

<TextView
    android:id="@+id/commented_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_10"
    android:text="demo chal rhah"
    android:textColor="#000"
    android:textSize="16dp"
    />

    </LinearLayout>
</LinearLayout>